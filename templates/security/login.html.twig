<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous"/>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" crossorigin="anonymous"/>
	<link rel="stylesheet" href="css/pages/authentication.css"/>
</head>


{% block body %}
	<body class="bg-primary">
		<form action="{{path('security_login')}}" method="post">

			<div id="layoutAuthentication">
				<div id="layoutAuthentication_content">
					<main>
						<div class="container">
							<div class="row justify-content-center">
								<div class="col-lg-5">
									<div class="card shadow-lg border-0 rounded-lg mt-5">
										<div class="card-header">
											<h1 class="text-center font-weight-light my-4">Connexion</h1>

										</div>
										<div class="card-body">
											<form action="{{path('security_login')}}" method="post">

												<div class="form-group mb-3">
													<div class="form-group">
														<label>Email</label>
														<input placeholder="adresse mail" require name="_username" type="text" class="form-control">
													</div>
												</div>
												<div class="form-group mb-3">
													<div class="form-group">
														<label>Mot de passe</label>
														<input placeholder="mot de passe" require name="_password" type="password" class="form-control">
													</div>

													<div class="form-check mb-3">
														<input class="form-check-input" id="rememberPasswordCheck" type="checkbox"/>
														<label class="form-check-label" for="rememberPasswordCheck">Remember password</label>
													</div>
													<div class="form-group mb-3 d-flex align-items-center justify-content-between mt-2">
														<a class="small" href="">Forgot Password?</a>
														<div class="form-group">
															<button type="submit" class="btn btn-success">Connexion!</button>
														</div>


													</div>
												</form>
											</div>
											<div class="card-footer text-center">
												<div class="small">
													<a href="{{ path ('security_registration')}}">Besoin d'un compte? Inscrivez vous!</a>

												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</main>
					</div>
				</div>

			</body>


		{% endblock %}
