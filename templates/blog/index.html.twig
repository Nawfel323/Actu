{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}

	<section class="articles">

		{% for article in articles %}

			<articles>
				<div class="d-flex flex-wrap">


					<div class="card mb-3">
						<h3 class="card-header">{{ article.title }}</h3>

						<div class="card-body">
							<div class="metadata">Ecrit le
								{{ article.createdAt | date('d/m/y') }}
								à
								{{ article.createdAt | date ('H:i') }}

								dans la catégorie Jeux Vidéo</div>

						</div>
						<img src="{{ article.image }}" alt="" width="450" height="200">


						<div class="card-body">
							{{ article.content | length > 50 ? article.content|slice(0, 50) ~ '...' : article.content  }}
						</div>
						<br><br>
						<a href="{{path('blog_show', {'id': article.id})}}" class="btn btn-primary">Lire la suite</a>

						<ul class="list-group list-group-flush">
							<li class="list-group-item">Par Admin</li>


						</ul>

					</div>


				</div>
			</articles>


		{% endfor %}


	</section>


{% endblock %}
